{% extends 'base.html.twig' %}

{% block title %}Hello VilleController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Les Villes</h1>
    <table border="solid">
    <th>Ville</th>
    <th>Code Postal</th>
    <th>Numéro de Département</th>
    {% for V in liste %}
    <tr>
      <td>{{ V.nomVille }}</td>
      <td>{{ V.codePostal }}</td>
      <td>{{ V.numDepartement }}</td>
    </tr>
    {% endfor %}
    </table>
     
</div>
{% endblock %}
